# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /					controllers.Assets.at(path="/public/html/", file="login.html")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file		controllers.Assets.at(path="/public", file)
POST    /getequations 		controllers.Application.getEquationsForLevel()
POST 	/addscore			controllers.Application.addScore()
POST    /setcurrentstudent 	controllers.Application.setCurrentStudent()
GET     /records            controllers.Application.showStudentRecords()
GET     /adminrecords 		controllers.Application.showAdminStudentRecords()
GET     /certificate 		controllers.Application.showCertificate()
POST	/getcertificate		controllers.Application.getCertificate()
GET     /login 				controllers.Assets.at(path="/public/html/", file="login.html")
POST	/login				controllers.Application.loginSubmit()
POST	/adduser			controllers.Application.addUser()
GET		/adduser			controllers.Assets.at(path="/public/html/", file="newstudent.html")
GET     /logout             controllers.Application.logout()
GET		/welcome			controllers.Application.welcome()
GET		/adminwelcome		controllers.Application.adminwelcome()
GET		/map				controllers.Application.map()
GET		/levelcreators		controllers.Application.levelcreators()
GET		/Level1Creator		controllers.Application.level1creator()
GET		/Level2Creator		controllers.Application.level2creator()
GET		/Level3Creator		controllers.Application.level3creator()
GET		/Level4_5Creator	controllers.Application.level4_5creator()
GET		/Level1				controllers.Application.level1()
GET 	/Level2 			controllers.Application.level2()
GET 	/Level3				controllers.Application.level3()
GET 	/Level4				controllers.Application.level4()
GET 	/Level5				controllers.Application.level5()
GET 	/levelsuccess		controllers.Application.levelSuccess()